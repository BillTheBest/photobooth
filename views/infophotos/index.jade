extends ../layout

block content
    h1(class='center').
        All the infophotos
    h4(class='center').
        filtered tweets right to your phone
    ul
        - each infophoto, i in infophotos
            li
                p
                    = infophoto.fname
                p
                    = infophoto.lname
                    = infophoto.twitter
                    = infophoto.company
                    = infophoto.title
                    = infophoto.date
                    = infophoto.interests
                    = infophoto._id
                    form(action='/infophotos/#{infophoto._id}',method='post',enctype='application/x-www-form-urlencoded')
                        input(type='hidden',value='DELETE',name='_method')
                        button(type='submit').
                            Delete
                    a(href='/infophotos/#{infophoto._id}') Edit